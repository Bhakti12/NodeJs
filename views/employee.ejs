    <body>
        <%- include('./header/navigation.ejs') %>
      <main>
                <% if (emp.length > 0) { %>
                    <div class="grid">
                        <% for (let employee of emp) { %>
                            <article class="card product-item">
                                <h2>
                                    <%= employee.firstName %>
                                    <%= employee.lastName %>
                                    <%= employee.emailId %>
                                    <%= employee.phoneNumber %>
                                </h2>
                                <div class="card__actions">
                                    <a href="/EditEmployee/<%= employee.id %>?edit=true" class="btn">Edit</a>
                                    <a href="/delete-employee/<%= employee.id %>?delete">Delete</a>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No employee Found!!</h1>
                        <% } %>
            </main>